<Window x:Class="ProjectApp.ModelFromCad.ModelFromCadView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProjectApp.ModelFromCad"
        mc:Ignorable="d"
        SizeToContent="Height"
        Topmost="True"
        WindowStartupLocation="CenterScreen"
        Title="ModelFromCadView" Width="450">

    <FrameworkElement.Resources>
        <ResourceDictionary>

            <Style x:Key="NiceButtonStyle" TargetType="Button">
                <!-- Kích thước và font cơ bản -->
                <Setter Property="Height" Value="28"/>
                <Setter Property="MinWidth" Value="80"/>
                <Setter Property="Padding" Value="10,0"/>
                <Setter Property="FontSize" Value="12"/>
                <Setter Property="FontWeight" Value="SemiBold"/>

                <!-- Màu sắc cơ bản -->
                <Setter Property="Background" Value="#FF007ACC"/>
                <!-- xanh kiểu VS -->
                <Setter Property="Foreground" Value="White"/>
                <Setter Property="BorderBrush" Value="#FF005A9E"/>
                <Setter Property="BorderThickness" Value="1"/>

                <!-- Hiển thị chuột dạng tay -->
                <Setter Property="Cursor" Value="Hand"/>

                <!-- Template -->
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="border"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="4"
                            SnapsToDevicePixels="True">
                                <ContentPresenter HorizontalAlignment="Center"
                                          VerticalAlignment="Center"
                                          RecognizesAccessKey="True"/>
                            </Border>

                            <ControlTemplate.Triggers>
                                <!-- Hover -->
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="border" Property="Background" Value="#FF1591E5"/>
                                </Trigger>

                                <!-- Pressed -->
                                <Trigger Property="IsPressed" Value="True">
                                    <Setter TargetName="border" Property="Background" Value="#FF0060A8"/>
                                    <Setter TargetName="border" Property="BorderBrush" Value="#FF003F70"/>
                                </Trigger>

                                <!-- Disabled -->
                                <Trigger Property="IsEnabled" Value="False">
                                    <Setter TargetName="border" Property="Background" Value="#FFE0E0E0"/>
                                    <Setter TargetName="border" Property="BorderBrush" Value="#FFB0B0B0"/>
                                    <Setter Property="Foreground" Value="#FF707070"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

            <!-- ================= TEXTBOX ================= -->
            <Style  TargetType="TextBox">
                <Setter Property="Height" Value="28"/>
                <Setter Property="Padding" Value="6,4"/>
                <Setter Property="FontSize" Value="12"/>
                <Setter Property="Background" Value="White"/>
                <Setter Property="Foreground" Value="Black"/>
                <Setter Property="BorderBrush" Value="#FFB8B8B8"/>
                <Setter Property="BorderThickness" Value="1"/>
                <Setter Property="SnapsToDevicePixels" Value="True"/>

                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="TextBox">
                            <Border x:Name="border"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="4">
                                <ScrollViewer x:Name="PART_ContentHost"
                                      Margin="0"
                                      HorizontalScrollBarVisibility="Hidden"
                                      VerticalScrollBarVisibility="Hidden"/>
                            </Border>

                            <ControlTemplate.Triggers>
                                <!-- Hover -->
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="border"
                                    Property="BorderBrush"
                                    Value="#FF7EB4EA"/>
                                </Trigger>

                                <!-- Focus -->
                                <Trigger Property="IsKeyboardFocused" Value="True">
                                    <Setter TargetName="border"
                                    Property="BorderBrush"
                                    Value="#FF007ACC"/>
                                </Trigger>

                                <!-- Disable -->
                                <Trigger Property="IsEnabled" Value="False">
                                    <Setter TargetName="border" Property="Background" Value="#FFF2F2F2"/>
                                    <Setter TargetName="border" Property="BorderBrush" Value="#FFD0D0D0"/>
                                    <Setter Property="Foreground" Value="#FF808080"/>
                                </Trigger>

                                <!-- Lỗi validation -->
                                <Trigger Property="Validation.HasError" Value="True">
                                    <Setter TargetName="border" Property="BorderBrush" Value="#FFE51400"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

            <Style  TargetType="ComboBox">
                <Setter Property="Height" Value="28"/>
                <Setter Property="Background" Value="White"/>
                <Setter Property="BorderBrush" Value="#C0C0C0"/>
                <Setter Property="BorderThickness" Value="1"/>
                <Setter Property="Padding" Value="6,0"/>
                <Setter Property="VerticalContentAlignment" Value="Center"/>
            </Style>

            <Style TargetType="TextBlock">
                <Setter Property="VerticalAlignment" Value="Center"></Setter>
            </Style>

        </ResourceDictionary>
    </FrameworkElement.Resources>

    <DockPanel Margin="5" Height="600">

        <StackPanel DockPanel.Dock="Bottom" HorizontalAlignment="Right"
                    Margin="0 5 0 0"
                    Orientation="Horizontal">
            <Button Content="GetData"
                    Click="ButtonBase_OnClick3"
                    Margin="0 0 6 0"
                    Style="{StaticResource NiceButtonStyle}"
            ></Button>
            <Button Content="Create"
                    Click="ButtonBase_OnClick2"
                    Margin="0 0 6 0"
                    Style="{StaticResource NiceButtonStyle}"
            ></Button>
            <Button Content="Close"
                    Click="ButtonBase_OnClick"
                    Style="{StaticResource NiceButtonStyle}"
                    ></Button>
        </StackPanel>
        <TabControl x:Name="TabControl">
            <TabItem Header="Column"
                    
                     >
                <Grid Margin="5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="71*"/>
                        <ColumnDefinition Width="353*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition></RowDefinition>
                        <RowDefinition Height="180"></RowDefinition>
                    </Grid.RowDefinitions>
                    <DataGrid x:Name="dgColumn" Grid.ColumnSpan="2">
                        <DataGrid.Columns>
                            <DataGridTemplateColumn Width="150">
                                <DataGridTemplateColumn.Header>
                                    <TextBlock Text="Width"></TextBlock>
                                </DataGridTemplateColumn.Header>

                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding Width}"></TextBlock>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>

                            <DataGridTemplateColumn Width="150">
                                <DataGridTemplateColumn.Header>
                                    <TextBlock Text="Height"></TextBlock>
                                </DataGridTemplateColumn.Header>

                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding Height}"></TextBlock>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>

                            <DataGridTemplateColumn Width="100">
                                <DataGridTemplateColumn.Header>
                                    <TextBlock Text="Quantity"></TextBlock>
                                </DataGridTemplateColumn.Header>

                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding Number}"></TextBlock>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>

                    <GroupBox Header="Setting" Grid.ColumnSpan="2" Margin="0,349,0,0" Grid.RowSpan="2">
                        <StackPanel Margin="5">
                            <DockPanel>
                                <TextBlock Width="80" 
                     Text="Family Type:"></TextBlock>
                                <ComboBox x:Name="cboColumnFamilyType"
                                          SelectionChanged="CboColumnFamilyType_OnSelectionChanged"
                                          DisplayMemberPath="Name"></ComboBox>
                            </DockPanel>

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition></ColumnDefinition>
                                    <ColumnDefinition></ColumnDefinition>
                                </Grid.ColumnDefinitions>

                                <DockPanel Margin="0 0 6 0">
                                    <TextBlock Width="80" Text="Width :"></TextBlock>
                                    <ComboBox x:Name="cbWidthColumn"></ComboBox>
                                </DockPanel>
                                <DockPanel Grid.Column="1" Margin="0 6">
                                    <TextBlock Width="80" Text="Height :"></TextBlock>
                                    <ComboBox x:Name="cbHeightCol"></ComboBox>
                                </DockPanel>
                            </Grid>

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition></ColumnDefinition>
                                    <ColumnDefinition></ColumnDefinition>
                                </Grid.ColumnDefinitions>

                                <DockPanel Margin="0 0 6 0">
                                    <TextBlock Width="80" Text="Base Offset :"></TextBlock>
                                    <TextBox x:Name="txtBaseOffset" Text="0.0"></TextBox>
                                </DockPanel>
                                <DockPanel Grid.Column="1">
                                    <TextBlock Width="80" Text="Top Offset :"></TextBlock>
                                    <TextBox x:Name="txtTopOffset" Text="0.0"></TextBox>
                                </DockPanel>
                            </Grid>

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition></ColumnDefinition>
                                    <ColumnDefinition></ColumnDefinition>
                                </Grid.ColumnDefinitions>

                                <DockPanel Margin="0 0 6 0">
                                    <TextBlock Width="80" Text="Base Level :"></TextBlock>
                                    <ComboBox x:Name="cbBaseLevel" DisplayMemberPath="Name"></ComboBox>
                                </DockPanel>
                                <DockPanel Grid.Column="1" Margin="0 6 0 0">
                                    <TextBlock Width="80" Text="Top Level :"></TextBlock>
                                    <ComboBox x:Name="cbTopLevel" DisplayMemberPath="Name"></ComboBox>
                                </DockPanel>
                            </Grid>
                        </StackPanel>
                    </GroupBox>
                </Grid>
            </TabItem>
            <TabItem Header="Beam">
                <Grid Margin="5">
                    <Grid.RowDefinitions>
                        <RowDefinition></RowDefinition>
                        <RowDefinition Height="180"></RowDefinition>
                    </Grid.RowDefinitions>
                    <DataGrid x:Name="dgBeam">
                        <DataGrid.Columns>
                            <DataGridTemplateColumn Width="150">
                                <DataGridTemplateColumn.Header>
                                    <TextBlock Text="Width"></TextBlock>
                                </DataGridTemplateColumn.Header>

                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding Width}"></TextBlock>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>

                            <DataGridTemplateColumn Width="150">
                                <DataGridTemplateColumn.Header>
                                    <TextBlock Text="Height"></TextBlock>
                                </DataGridTemplateColumn.Header>

                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding Height}"></TextBlock>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>

                            <DataGridTemplateColumn Width="100">
                                <DataGridTemplateColumn.Header>
                                    <TextBlock Text="Quantity"></TextBlock>
                                </DataGridTemplateColumn.Header>

                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding Number}"></TextBlock>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>

                    <GroupBox Grid.Row="1" Header="Setting">
                        <StackPanel Margin="5">
                            <DockPanel>
                                <TextBlock Width="80" 
                                    Text="Family Type:"></TextBlock>
                                <ComboBox DisplayMemberPath="Name"
                                          SelectionChanged="CbFamilyBeamTypes_OnSelected"
                                          x:Name="CbFamilyBeamTypes"></ComboBox>
                            </DockPanel>

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition></ColumnDefinition>
                                    <ColumnDefinition></ColumnDefinition>
                                </Grid.ColumnDefinitions>

                                <DockPanel Margin="0 0 6 0">
                                    <TextBlock Width="80" Text="Width :"></TextBlock>
                                    <ComboBox x:Name="cbBeamWidth"
                                             ></ComboBox>
                                </DockPanel>
                                <DockPanel Grid.Column="1" Margin="0 6">
                                    <TextBlock Width="80" Text="Height :"></TextBlock>
                                    <ComboBox 
                                             x:Name="cbBeamHeight"></ComboBox>
                                </DockPanel>
                            </Grid>

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition></ColumnDefinition>
                                    <ColumnDefinition></ColumnDefinition>
                                </Grid.ColumnDefinitions>

                                <DockPanel 
                                    
                                    Grid.ColumnSpan="2" Margin="0 6 0 0">
                                    <TextBlock Width="80" Text="Level :"></TextBlock>
                                    <ComboBox x:Name="cbBeamLevels" DisplayMemberPath="Name"></ComboBox>
                                </DockPanel>

                            </Grid>
                        </StackPanel>
                    </GroupBox>
                </Grid>
            </TabItem>
            <TabItem Header="Floor">
                <Grid Margin="5">
                    <Grid.RowDefinitions>
                        <RowDefinition></RowDefinition>
                        <RowDefinition Height="180"></RowDefinition>
                    </Grid.RowDefinitions>
                    <DataGrid x:Name="dgFloor" AutoGenerateColumns="False">
                        <DataGrid.Columns>
                            <DataGridTemplateColumn Width="150">
                                <DataGridTemplateColumn.Header>
                                    <TextBlock Text="Area"></TextBlock>
                                </DataGridTemplateColumn.Header>

                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding Area}"></TextBlock>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>

                            <!--<DataGridTemplateColumn Width="100">
                                <DataGridTemplateColumn.Header>
                                    <TextBlock Text="Quantity"></TextBlock>
                                </DataGridTemplateColumn.Header>

                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding  EdgesNumber}"></TextBlock>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>-->
                        </DataGrid.Columns>
                    </DataGrid>

                    <GroupBox Grid.Row="1" Header="Setting">
                        <StackPanel Margin="5">
                            <DockPanel>
                                <TextBlock Width="80" 
                              Text="Floor Type:"></TextBlock>
                                <ComboBox x:Name="cbFloorType"
                                          DisplayMemberPath="Name"></ComboBox>
                            </DockPanel>

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition></ColumnDefinition>
                                    <ColumnDefinition></ColumnDefinition>
                                </Grid.ColumnDefinitions>

                                <DockPanel 
                              
                              Grid.ColumnSpan="2" Margin="0 6 0 0">
                                    <TextBlock Width="80" Text="Level :"></TextBlock>
                                    <ComboBox x:Name="cbFloorLevel"
                                              DisplayMemberPath="Name"></ComboBox>
                                </DockPanel>

                            </Grid>

                            <Grid Margin="0 6 0 0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition></ColumnDefinition>
                                    <ColumnDefinition></ColumnDefinition>
                                </Grid.ColumnDefinitions>

                                <DockPanel Grid.ColumnSpan="2" Margin="0 0 0 0">
                                    <TextBlock Width="140" Text="Offset from level (mm) :"></TextBlock>
                                    <TextBox x:Name="txtFloorOffset" Text="0.0"></TextBox>
                                </DockPanel>

                            </Grid>
                        </StackPanel>
                    </GroupBox>
                </Grid>

            </TabItem>
        </TabControl>

    </DockPanel>
</Window>